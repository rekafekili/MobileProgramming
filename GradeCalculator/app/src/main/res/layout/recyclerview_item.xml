<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <Spinner
        android:id="@+id/main_recycler_item_classification_spinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/main_recycler_item_subject_name_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="5dp"
        android:background="@color/white"
        android:inputType="text"
        android:hint="@string/subject_name_edittext_hint" />

    <Spinner
        android:id="@+id/main_recycler_item_grade_spinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <EditText
        android:id="@+id/main_recycler_item_grade_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:inputType="number"
        android:background="@color/white"
        android:hint="@string/grade_edittext_hint"/>

</LinearLayout>